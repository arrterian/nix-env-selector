{
  "name": "nix-env-selector",
  "displayName": "Nix Environment Selector",
  "description": "Use custom environments declared in Nix config files.",
  "version": "0.1.2",
  "keywords": [
    "nix",
    "nix-env",
    "nix-shell",
    "vscode"
  ],
  "license": "MIT",
  "publisher": "arrterian",
  "author": {
    "name": "Roman Valihura",
    "email": "roman.valihura@gmail.com"
  },
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.38.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arrterian/nix-env-selector.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Nix Environment Selector",
      "properties": {
        "nixEnvSelector.nixShellConfig": {
          "type": "string",
          "default": null,
          "description": "Path to nix-shell config"
        },
        "nixEnvSelector.nixShellConfigAttr": {
          "type": "string",
          "default": null,
          "description": "Attribute for nix-shell config. Used in `nix-shell -A`."
        }
      }
    },
    "commands": [{
      "command": "extension.selectEnv",
      "title": "Nix-Env: Select Environment"
    }]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test:integration": "echo 'Run integration test'",
    "test:unit": "mocha -r ts-node/register src/test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/dotenv": "^6.1.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.27.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^6.3.0",
    "glob": "^7.1.4",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "dotenv": "^8.1.0",
    "fluture": "^11.0.3",
    "fp-ts": "^2.0.5"
  }
}
